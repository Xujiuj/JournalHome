<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kstt.sys.mapper.SysAreaMapper">

    <resultMap type="SysArea" id="SysAreaResult">
        <id property="areaId" column="area_id"/>
        <result property="areaName" column="area_name"/>
        <result property="areaSubjectId" column="area_subject_id"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <resultMap type="SysArea" id="SysAreaWithSubjectResult" extends="SysAreaResult">
        <association property="subject" column="area_subject_id"
                     select="com.kstt.sys.mapper.SysSubjectMapper.selectSubjectBySubjectId"/>
    </resultMap>

    <sql id="selectSysAreaVo">
        select area_id, area_name, area_subject_id, create_by, create_time, update_by, update_time
        from sys_area
    </sql>

    <select id="selectAreaByAreaId" parameterType="Integer" resultMap="SysAreaResult">
        <include refid="selectSysAreaVo"/>
        where area_id = #{areaId}
    </select>

    <select id="selectAreaList" parameterType="SysArea" resultMap="SysAreaResult">
        <include refid="selectSysAreaVo"/>
        <where>
            <if test="areaName != null and areaName != ''">
                AND area_name like concat('%', #{areaName}, '%')
            </if>
            <if test="areaSubjectId != null">
                AND area_subject_id = #{areaSubjectId}
            </if>
        </where>
        order by area_id
    </select>

    <select id="selectAreasBySubjectId" parameterType="Integer" resultMap="SysAreaResult">
        <include refid="selectSysAreaVo"/>
        where area_subject_id = #{subjectId}
        order by area_id
    </select>

    <insert id="insertSysArea" parameterType="SysArea">
        insert into sys_area
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="areaId != null">area_id,</if>
            <if test="areaName != null and areaName != ''">area_name,</if>
            <if test="areaSubjectId != null">area_subject_id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="areaId != null">#{areaId},</if>
            <if test="areaName != null and areaName != ''">#{areaName},</if>
            <if test="areaSubjectId != null">#{areaSubjectId},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateArea" parameterType="SysArea">
        update sys_area
        <trim prefix="SET" suffixOverrides=",">
            <if test="areaName != null and areaName != ''">area_name = #{areaName},</if>
            <if test="areaSubjectId != null">area_subject_id = #{areaSubjectId},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where area_id = #{areaId}
    </update>

    <delete id="deleteAreaByAreaId" parameterType="Integer">
        delete from sys_area where area_id = #{areaId}
    </delete>

    <delete id="deleteAreaByAreaIds" parameterType="Integer">
        delete from sys_area where area_id in
        <foreach item="areaId" collection="areaIds" open="(" separator="," close=")">
            #{areaId}
        </foreach>
    </delete>

</mapper>
