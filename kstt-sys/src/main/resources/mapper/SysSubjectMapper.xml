<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kstt.sys.mapper.SysSubjectMapper">

    <resultMap type="SysSubject" id="SysSubjectResult">
        <id property="subjectId" column="subject_id"/>
        <result property="subjectName" column="subject_name"/>
    </resultMap>

    <sql id="selectSysSubjectVo">
        select subject_id, subject_name
        from sys_subject
    </sql>

    <select id="selectSubjectBySubjectId" parameterType="Integer" resultMap="SysSubjectResult">
        <include refid="selectSysSubjectVo"/>
        where subject_id = #{subjectId}
    </select>

    <select id="selectSubjectList" parameterType="SysSubject" resultMap="SysSubjectResult">
        <include refid="selectSysSubjectVo"/>
        <where>
            <if test="subjectName != null and subjectName != ''">
                AND subject_name like concat('%', #{subjectName}, '%')
            </if>
        </where>
        order by subject_id
    </select>

    <insert id="insertSysSubject" parameterType="SysSubject" useGeneratedKeys="true" keyProperty="subjectId">
        insert into sys_subject
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="subjectName != null and subjectName != ''">subject_name,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="subjectName != null and subjectName != ''">#{subjectName},</if>
        </trim>
    </insert>

    <update id="updateSubject" parameterType="SysSubject">
        update sys_subject
        <trim prefix="SET" suffixOverrides=",">
            <if test="subjectName != null and subjectName != ''">subject_name = #{subjectName},</if>
        </trim>
        where subject_id = #{subjectId}
    </update>

    <delete id="deleteSubjectBySubjectId" parameterType="Integer">
        delete from sys_subject where subject_id = #{subjectId}
    </delete>

    <delete id="deleteSubjectBySubjectIds" parameterType="Integer">
        delete from sys_subject where subject_id in
        <foreach item="subjectId" collection="subjectIds" open="(" separator="," close=")">
            #{subjectId}
        </foreach>
    </delete>

</mapper>
